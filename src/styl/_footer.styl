
.footer
  max-width 100%
  height rem(100px)
  border-top 1px solid $color-gray
  background-color $color-gray

  > p
    text-align center
    padding rem(15px)
    @extend $text

    > a
      color $color-blue
      font-weight bold
      text-decoration none

      &:hover
        color $color-gray
        background-color $color-blue
